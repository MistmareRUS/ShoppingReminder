<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ShoppingReminder"
             x:Class="ShoppingReminder.MainPage"       
             Style="{DynamicResource ShellStyle}">

    <FlyoutItem Title="Текущая покупка">
        <Tab Title="Активные покупки">
            <ShellContent Title="Текущее">
                <ContentPage>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="CurrentStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                            
                        </StackLayout>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
        <Tab Title="Купленные">
            <ShellContent Title="Текущее">
                <ContentPage >
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="CompletetCurrentStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">

                        </StackLayout>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    
    
    <FlyoutItem Title="Запланированное">
        <Tab Title="***">
            <ShellContent Title="Текущее">
                <ContentPage>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="PlanStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">

                        </StackLayout>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    
    
    <FlyoutItem Title="История покупок">
        <Tab Title="История покупок">
            <ShellContent Title="Текущее">
                <ContentPage>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="HistoryStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">

                        </StackLayout>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
        <Tab Title="Фото" IsEnabled="False">
            <ShellContent>
                <ContentPage>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="PhotoStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">

                        </StackLayout>
                    </AbsoluteLayout>
                </ContentPage>
            </ShellContent>
        </Tab>
    </FlyoutItem>
    
    
    <FlyoutItem Title="Настройки">
        <Tab Title="***">
            <ShellContent Title="Текущее">
                <ContentPage>
                    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" >
                        <Image  Style="{DynamicResource BGImage}"/>
                        <StackLayout x:Name="SettingsStack" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                            <Button Text="Сброс текущих" Clicked="Button_Clicked" StyleClass="myBtn"/>
                            <Button Text="Сброс истории" Clicked="Button_Clicked_1"/>
                            <Button Text="Сброс планов" Clicked="Button_Clicked_2"/>
                            <Button Text="Сброс фоток" Clicked="Button_Clicked_3"/>
                            <Button Text="Удаление фоток" Clicked="Button_Clicked_4"/>
                            <Button Text="Тема" Clicked="Button_Clicked_5"/>
                        </StackLayout>
                    </AbsoluteLayout>                    
                </ContentPage>
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>
