    </Style>
    <Style x:Key="FromPlanBtn" TargetType="Button">
        <Setter Property="Text" Value="к текущим"/>
        <Setter Property="ImageSource" Value="Default_FromCalendar48.png"/>
        <Setter Property="TextColor" Value="#39ABCC"/>
        <Setter Property="ContentLayout" Value="Top"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="DeleteBtn" TargetType="Button">
        <Setter Property="Text" Value="удалить"/>
        <Setter Property="ImageSource" Value="Default_Delete48.png"/>
