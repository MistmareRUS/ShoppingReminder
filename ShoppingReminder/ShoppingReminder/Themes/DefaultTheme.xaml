<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingReminder.Themes.DefaultTheme">
    <Color x:Key="SidePanelColor">Red</Color>

    <Style x:Key="ShellStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="#067898"/>
        <Setter Property="FlyoutBackgroundColor" Value="#39ABCC"/>
    </Style>
    
    <Style x:Key="BGImage" TargetType="Image">
        <Setter Property="Source" Value=""/>
        <Setter Property="AbsoluteLayout.LayoutFlags" Value="All"/>
        <Setter Property="AbsoluteLayout.LayoutBounds" Value="0,0,1,1"/>
        <Setter Property="Aspect" Value="Fill"/>
        <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>

    </Style>
    <!--//////////////////////////////////////////КНОПКИ////////////////////////////////////////////////-->
    <Style x:Key="BackBtn" TargetType="Button">
        <Setter Property="Text" Value="назад"/>
        <Setter Property="ImageSource" Value="Default_Back48.png"/>
        <Setter Property="TextColor" Value="#39ABCC"/>
        <Setter Property="ContentLayout" Value="Top"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="UpBtn" TargetType="Button">        
        <Setter Property="ImageSource" Value="Default_Up48.png"/>
        <Setter Property="TextColor" Value="#39ABCC"/>
