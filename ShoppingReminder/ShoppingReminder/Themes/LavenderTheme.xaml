<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingReminder.Themes.LavenderTheme">

    <!--//////////////////////Цвета////////////////////-->
    <Color x:Key="MainColor">#43286F</Color>
    <Color x:Key="2thColor">#6F6580</Color>
    <Color x:Key="3thColor">#B9A8D5</Color>
    <Color x:Key="DarkColor">#8D7BAB</Color>
    <Color x:Key="LightColor">#C1B4D5</Color>

    <!--//////////////////////////Shell////////////////////////////-->
    <Style x:Key="ShellStyle" TargetType="Shell">
        <Setter Property="BackgroundColor" Value="{StaticResource 2thColor}"/>
        <Setter Property="FlyoutBackgroundColor" Value="{StaticResource 3thColor}"/>
        <Setter Property="Shell.TitleColor" Value="{StaticResource LightColor}"/>
        <Setter Property="Shell.DisabledColor" Value="{StaticResource 3thColor }"/>
        <Setter Property="Shell.UnselectedColor" Value="{StaticResource DarkColor}"/>
        <Setter Property="Shell.NavBarIsVisible" Value="False"/>
        <Setter Property="FlyoutIcon" Value="Icon100.png"/>
    </Style>
    
    <Style x:Key="FlyoutHeader" TargetType="StackLayout">
        <Setter Property="BackgroundColor" Value="{StaticResource 2thColor}"/>
    </Style>

    <Style x:Key="BGImage" TargetType="Image">
        <Setter Property="Source" Value="Lavender_BG300.png"/>
        <Setter Property="AbsoluteLayout.LayoutFlags" Value="All"/>
        <Setter Property="AbsoluteLayout.LayoutBounds" Value="0,0,1,1"/>
        <Setter Property="Aspect" Value="AspectFill"/>
        <Setter Property="VerticalOptions" Value="FillAndExpand"/>
        <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
    </Style>
    <Style x:Key="Separator" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="3"/>
        <Setter Property="BackgroundColor" Value="{StaticResource 2thColor}"/>
    </Style>
    <!--//////////////////////////////////////////КНОПКИ////////////////////////////////////////////////-->
    <Style x:Key="SetBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_SetItem48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="ListBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_List48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="UpBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Up48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="DownBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Down48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="MoveBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Move48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>   
    <Style x:Key="DeleteBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Delete48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="PhotoBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Photo48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="AddBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Add48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="OkBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Ok48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="CancelBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Cancel48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="ShareBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Share48.png"/>
        <Setter Property="TextColor" Value="{StaticResource MainColor}"/>
        <Setter Property="ContentLayout" Value="Top, 0"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <Style x:Key="MenuBtn" TargetType="Button">
        <Setter Property="ImageSource" Value="Lavender_Menu48.png"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>
    <!--////////////////////Text////////////////////////-->
    <Style x:Key="Header" TargetType="Label">
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="TextColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="VerticalTextAlignment" Value="Center"/>
    </Style>
    <Style x:Key="Discription" TargetType="Label">
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="TextColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
    </Style>
    <Style x:Key="Link" TargetType="Label">
        <Setter Property="FontSize" Value="Large"/>
        <Setter Property="TextColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>

    <Style x:Key="Picker" TargetType="Picker">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="TitleColor" Value="{DynamicResource MainColor}"/>
    </Style>
    <Style x:Key="Entry" TargetType="Entry">
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="TextColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="PlaceholderColor" Value="{DynamicResource MainColor}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    <!--////////////////////////Прочее//////////////////////////////-->
    <Style x:Key="SettingImg" TargetType="Image">
        <Setter Property="Source" Value="Lavender_SetList48.png"/>
    </Style>
</ResourceDictionary>