<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingReminder.View.CompletedPurchaseListPage">
  <ContentView.Content>
      <StackLayout>            
            <ListView x:Name="purchaseList" ItemsSource="{Binding CompletedPurchases}" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding Name}" FontSize="Medium"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding Count}" FontSize="Small"/>
                                        <Label Text="{Binding Units}" FontSize="Small"/>
                                        <Button Text="Вернуть" Command="{Binding ListVM.UnmarkAsCompletedPurchaseCommand}" CommandParameter="{Binding}"/>
                                    </StackLayout>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
  </ContentView.Content>
</ContentView>